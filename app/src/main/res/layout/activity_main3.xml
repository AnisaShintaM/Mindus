<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl101101928.mindus.Main3Activity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Add Reminder"
        android:layout_gravity="center_horizontal"
        android:textColor="#e41665"
        android:textSize="40dp"
        android:textColorHighlight="#f41a1a"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="336dp"
        android:layout_height="242dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo_mindus"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Anything You Want Me To Remind you ? It's Easy Just Add Reminder And Don't Forget To Do It"
        android:textColor="#f12345"
        android:textSize="15dp"
        android:layout_weight="0.53"
        android:padding="15dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ADD REMINDER"
        android:textColor="#ec0d6a" />
</LinearLayout>

